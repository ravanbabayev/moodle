{{!
    @template local_lidio/admin_merchants_list

    Admin merchant management template.

    Classes required for JS:
    * none

    Context variables required for this template:
    * merchants - Array of merchant objects
    * strings - Array of language strings
}}

<div class="max-w-full mx-auto">
    <div class="bg-white shadow-md rounded-lg overflow-hidden">
        <div class="border-b border-gray-200 px-6 py-4">
            <h3 class="text-lg font-semibold text-gray-800">{{strings.merchantmanagement}}</h3>
            <p class="text-sm text-gray-600 mt-1">{{strings.merchantmanagementdesc}}</p>
        </div>

        {{#has_merchants}}
        <div class="overflow-x-auto">
            <table class="min-w-full divide-y divide-gray-200">
                <thead class="bg-gray-50">
                    <tr>
                        <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">{{strings.merchant}}</th>
                        <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">{{strings.companyname}}</th>
                        <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">{{strings.status}}</th>
                        <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">{{strings.commissionrate}}</th>
                        <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">{{strings.settlementperiod}}</th>
                        <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">{{strings.actions}}</th>
                    </tr>
                </thead>
                <tbody class="bg-white divide-y divide-gray-200">
                    {{#merchants}}
                    <tr class="hover:bg-gray-50">
                        <td class="px-6 py-4 whitespace-nowrap">
                            <div class="flex items-center">
                                {{{merchant.picture}}}
                                <div class="ml-4">
                                    <div class="text-sm font-medium text-gray-900">
                                        <a href="{{profile_url}}" class="hover:text-indigo-600">{{fullname}}</a>
                                    </div>
                                    <div class="text-sm text-gray-500">{{email}}</div>
                                </div>
                            </div>
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                            {{company_name}}
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap">
                            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium
                                {{#status_pending}}bg-yellow-100 text-yellow-800{{/status_pending}}
                                {{#status_approved}}bg-green-100 text-green-800{{/status_approved}}
                                {{#status_rejected}}bg-red-100 text-red-800{{/status_rejected}}">
                                {{status_text}}
                            </span>
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                            {{commission_rate}}
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                            {{settlement_period}}
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap flex text-right text-sm font-medium space-x-2">
                            <a href="{{view_url}}" class="btn btn-info">
                                {{strings.view}}
                            </a>
                            <a href="{{view_kyc_url}}" class="btn btn-primary">
                                {{strings.view_kyc}}
                            </a>
                            <a href="{{edit_url}}" class="btn btn-warning">
                                {{strings.edit}}
                            </a>
                        </td>
                    </tr>
                    {{/merchants}}
                </tbody>
            </table>
        </div>
        {{/has_merchants}}
        
        {{^has_merchants}}
        <div class="px-6 py-12 text-center">
            <svg class="mx-auto h-14 w-14 text-gray-300" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z" />
            </svg>
            <h3 class="mt-4 text-sm font-medium text-gray-900">{{strings.nomerchants}}</h3>
            <p class="mt-2 text-sm text-gray-500 max-w-md mx-auto">{{strings.nomerchantsdesc}}</p>
        </div>
        {{/has_merchants}}
    </div>
</div> 