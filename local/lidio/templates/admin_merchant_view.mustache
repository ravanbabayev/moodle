<div class="container py-4">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <a href="{{{back_url}}}" class="btn btn-secondary">
            <i class="fa fa-arrow-left me-1"></i>
            {{strings.back}}
        </a>

        <div class="d-flex gap-2">
            {{#show_approve}}
            <a href="{{{approve_url}}}" class="btn btn-success">
                <i class="fa fa-check me-1"></i>
                {{strings.approve}}
            </a>
            <a href="{{{reject_url}}}" class="btn btn-danger">
                <i class="fa fa-times me-1"></i>
                {{strings.reject}}
            </a>
            {{/show_approve}}
            {{#show_kyc_approve}}
            <a href="{{{kyc_approve_url}}}" class="btn btn-primary">
                <i class="fa fa-id-card me-1"></i>
                {{strings.kycapprove}}
            </a>
            <a href="{{{kyc_reject_url}}}" class="btn btn-warning">
                <i class="fa fa-ban me-1"></i>
                {{strings.kycreject}}
            </a>
            {{/show_kyc_approve}}
        </div>
    </div>

    <!-- Merchant Details -->
    <div class="card mb-4 shadow-sm">
        <div class="card-header bg-white">
            <h3 class="mb-0">{{strings.merchantdetails}}</h3>
            <p class="text-muted mb-0 small">{{strings.merchantdetailsdesc}}</p>
        </div>

        <!-- User Information -->
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-striped mb-0">
                    <tbody>
                        <tr>
                            <th class="w-25">{{strings.userprofile}}</th>
                            <td>
                                <a href="{{{profile_url}}}" class="text-primary">{{user.fullname}}</a>
                            </td>
                        </tr>
                        <tr>
                            <th>{{strings.email}}</th>
                            <td>{{user.email}}</td>
                        </tr>
                        <tr>
                            <th>{{strings.companytype}}</th>
                            <td>{{merchant.company_type_text}}</td>
                        </tr>
                        <tr>
                            <th>{{strings.companyname}}</th>
                            <td>{{merchant.company_name}}</td>
                        </tr>
                        <tr>
                            <th>{{strings.phone}}</th>
                            <td>{{merchant.phone}}</td>
                        </tr>
                        <tr>
                            <th>{{strings.status}}</th>
                            <td>
                                <span class="badge 
                                    {{#merchant.status_pending}}bg-warning{{/merchant.status_pending}}
                                    {{#merchant.status_approved}}bg-success{{/merchant.status_approved}}
                                    {{#merchant.status_rejected}}bg-danger{{/merchant.status_rejected}}">
                                    {{merchant.status_text}}
                                </span>
                            </td>
                        </tr>
                        <tr>
                            <th>{{strings.kycstatus}}</th>
                            <td>
                                <span class="badge
                                    {{#merchant.kyc_status_pending}}bg-warning{{/merchant.kyc_status_pending}}
                                    {{#merchant.kyc_status_approved}}bg-success{{/merchant.kyc_status_approved}}
                                    {{#merchant.kyc_status_rejected}}bg-danger{{/merchant.kyc_status_rejected}}">
                                    {{merchant.kyc_status_text}}
                                </span>
                            </td>
                        </tr>
                        <tr>
                            <th>{{strings.applicationdate}}</th>
                            <td>{{merchant.formatted_date}}</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <!-- Business Information -->
    <div class="card mb-4 shadow-sm">
        <div class="card-header bg-white">
            <h3 class="mb-0">{{strings.businessinformation}}</h3>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-striped mb-0">
                    <tbody>
                        <tr>
                            <th class="w-25">{{strings.website}}</th>
                            <td>
                                {{#merchant.website}}
                                <a href="{{{merchant.website}}}" class="text-primary" target="_blank">{{merchant.website}}</a>
                                {{/merchant.website}}
                                {{^merchant.website}}
                                -
                                {{/merchant.website}}
                            </td>
                        </tr>
                        <tr>
                            <th>{{strings.socialmedialinks}}</th>
                            <td>
                                {{#merchant.social_media}}
                                <p style="white-space: pre-line;">{{merchant.social_media}}</p>
                                {{/merchant.social_media}}
                                {{^merchant.social_media}}
                                -
                                {{/merchant.social_media}}
                            </td>
                        </tr>
                        <tr>
                            <th>{{strings.businessarea}}</th>
                            <td>
                                <p style="white-space: pre-line;">{{merchant.business_area}}</p>
                            </td>
                        </tr>
                        <tr>
                            <th>{{strings.monthlysalesvolume}}</th>
                            <td>{{merchant.monthly_volume_text}}</td>
                        </tr>
                        <tr>
                            <th>{{strings.paymentmethods}}</th>
                            <td>
                                <div class="d-flex flex-wrap gap-2">
                                    {{#merchant.payment_methods_array}}
                                    <span class="badge bg-info">
                                        {{.}}
                                    </span>
                                    {{/merchant.payment_methods_array}}
                                </div>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <!-- Bank Information -->
    <div class="card mb-4 shadow-sm">
        <div class="card-header bg-white">
            <h3 class="mb-0">{{strings.bankinformation}}</h3>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-striped mb-0">
                    <tbody>
                        <tr>
                            <th class="w-25">{{strings.accountholder}}</th>
                            <td>{{merchant.account_holder}}</td>
                        </tr>
                        <tr>
                            <th>{{strings.bankname}}</th>
                            <td>{{merchant.bank_name}}</td>
                        </tr>
                        <tr>
                            <th>{{strings.iban}}</th>
                            <td><code>{{merchant.iban}}</code></td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <!-- Documents -->
    {{#has_documents}}
    <div class="card shadow-sm">
        <div class="card-header bg-white">
            <h3 class="mb-0">{{strings.documents}}</h3>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-striped mb-0">
                    <thead>
                        <tr>
                            <th>{{strings.documenttype}}</th>
                            <th>{{strings.filename}}</th>
                            <th>{{strings.uploaddate}}</th>
                            <th>{{strings.status}}</th>
                            <th>{{strings.actions}}</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#documents}}
                        <tr>
                            <td>{{type_text}}</td>
                            <td>{{filename}}</td>
                            <td>{{formatted_date}}</td>
                            <td>
                                <span class="badge
                                    {{#status_pending}}bg-warning{{/status_pending}}
                                    {{#status_approved}}bg-success{{/status_approved}}
                                    {{#status_rejected}}bg-danger{{/status_rejected}}">
                                    {{status_text}}
                                </span>
                            </td>
                            <td>
                                <a href="{{{download_url}}}" class="btn btn-sm btn-info">
                                    <i class="fa fa-download me-1"></i>
                                    {{strings.download}}
                                </a>
                            </td>
                        </tr>
                        {{/documents}}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    {{/has_documents}}
</div> 