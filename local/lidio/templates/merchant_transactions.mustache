{{!
    @template local_lidio/merchant_transactions

    Merchant transactions history template.

    Classes required for JS:
    * none

    Context variables required for this template:
    * merchant - Merchant data object
    * transactions - Array of transaction objects
    * has_transactions - Boolean indicating if there are any transactions
    * strings - Array of language strings
}}

<div class="flex flex-col lg:flex-row min-h-screen">
    <!-- Sidebar Navigation -->
    <div class="w-full lg:w-64 bg-white shadow-lg">
        <div class="bg-indigo-600 text-white p-5">
            <h2 class="text-xl font-bold">{{strings.merchantdashboard}}</h2>
            <p class="text-sm mt-1 text-indigo-100 opacity-90">{{strings.welcome}}, {{merchant.company_name}}</p>
        </div>
        <nav class="p-4">
            <h3 class="text-xs font-semibold text-gray-400 uppercase tracking-wider mb-4 px-2">
                {{strings.navigation}}
            </h3>
            <ul class="space-y-1">
                <li>
                    <a href="{{dashboard_url}}" class="flex items-center px-4 py-3 text-sm font-medium text-gray-600 hover:bg-gray-50 hover:text-gray-900 rounded-lg">
                        <svg class="mr-3 h-5 w-5 text-gray-400" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
                        </svg>
                        {{strings.dashboard}}
                    </a>
                </li>
                <li>
                    <a href="#" class="flex items-center px-4 py-3 text-sm font-medium text-indigo-700 bg-indigo-50 rounded-lg">
                        <svg class="mr-3 h-5 w-5 text-indigo-500" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h18M7 15h1m4 0h1m-7 4h12a3 3 0 003-3V8a3 3 0 00-3-3H6a3 3 0 00-3 3v8a3 3 0 003 3z" />
                        </svg>
                        {{strings.transactions}}
                    </a>
                </li>
                <li>
                    <a href="#" class="flex items-center px-4 py-3 text-sm font-medium text-gray-600 hover:bg-gray-50 hover:text-gray-900 rounded-lg">
                        <svg class="mr-3 h-5 w-5 text-gray-400" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z" />
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                        </svg>
                        {{strings.settings}}
                    </a>
                </li>
                <li>
                    <a href="#" class="flex items-center px-4 py-3 text-sm font-medium text-gray-600 hover:bg-gray-50 hover:text-gray-900 rounded-lg">
                        <svg class="mr-3 h-5 w-5 text-gray-400" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.228 9c.549-1.165 2.03-2 3.772-2 2.21 0 4 1.343 4 3 0 1.4-1.278 2.575-3.006 2.907-.542.104-.994.54-.994 1.093m0 3h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                        </svg>
                        {{strings.help}}
                    </a>
                </li>
            </ul>
        </nav>
    </div>

    <!-- Main Content -->
    <div class="flex-1 p-6 lg:p-10 bg-gray-50">
        <div class="mb-8">
            <h1 class="text-2xl font-bold text-gray-900">{{strings.transactions}}</h1>
            <p class="mt-2 text-sm text-gray-600">{{strings.transactionsintro}}</p>
        </div>

        <!-- Filters Section -->
        <div class="mb-8 bg-white rounded-lg shadow-md p-6">
            <h3 class="text-lg font-semibold text-gray-800 mb-4">{{strings.filtertransactions}}</h3>
            
            <form class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6">
                <div class="flex flex-col">
                    <label for="date_from" class="text-sm font-medium text-gray-700 mb-2">{{strings.datefrom}}</label>
                    <input type="date" id="date_from" name="date_from" 
                        class="px-4 py-3 rounded-lg border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 text-sm"
                        placeholder="{{strings.datefrom}}">
                </div>
                
                <div class="flex flex-col">
                    <label for="date_to" class="text-sm font-medium text-gray-700 mb-2">{{strings.dateto}}</label>
                    <input type="date" id="date_to" name="date_to" 
                        class="px-4 py-3 rounded-lg border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 text-sm"
                        placeholder="{{strings.dateto}}">
                </div>
                
                <div class="flex flex-col">
                    <label for="status" class="text-sm font-medium text-gray-700 mb-2">{{strings.status}}</label>
                    <select id="status" name="status" 
                        class="px-4 py-3 rounded-lg border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 text-sm">
                        <option value="">{{strings.allstatuses}}</option>
                        <option value="completed">{{strings.completed}}</option>
                        <option value="pending">{{strings.pending}}</option>
                        <option value="failed">{{strings.failed}}</option>
                        <option value="refunded">{{strings.refunded}}</option>
                    </select>
                </div>
                
                <div class="flex items-end">
                    <button type="submit" class="w-full inline-flex justify-center items-center px-4 py-3 border border-transparent text-sm font-medium rounded-lg shadow-sm text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 4a1 1 0 011-1h16a1 1 0 011 1v2.586a1 1 0 01-.293.707l-6.414 6.414a1 1 0 00-.293.707V17l-4 4v-6.586a1 1 0 00-.293-.707L3.293 7.293A1 1 0 013 6.586V4z"></path>
                        </svg>
                        {{strings.filter}}
                    </button>
                </div>
            </form>
        </div>

        <!-- Transactions Table -->
        <div class="mb-8 bg-white rounded-lg shadow-md overflow-hidden">
            <div class="px-6 py-4 border-b border-gray-200">
                <h3 class="text-lg font-semibold text-gray-800">{{strings.transactionhistory}}</h3>
            </div>

            {{#has_transactions}}
            <div class="overflow-x-auto">
                <table class="min-w-full divide-y divide-gray-200">
                    <thead class="bg-gray-50">
                        <tr>
                            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">{{strings.transactionid}}</th>
                            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">{{strings.date}}</th>
                            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">{{strings.amount}}</th>
                            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">{{strings.paymentmethod}}</th>
                            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">{{strings.status}}</th>
                            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">{{strings.actions}}</th>
                        </tr>
                    </thead>
                    <tbody class="bg-white divide-y divide-gray-200">
                        {{#transactions}}
                        <tr class="hover:bg-gray-50">
                            <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">{{transaction_id}}</td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">{{formatted_date}}</td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900 font-medium">â‚º{{amount}}</td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">{{payment_method}}</td>
                            <td class="px-6 py-4 whitespace-nowrap">
                                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium
                                    {{#status_completed}}bg-green-100 text-green-800{{/status_completed}}
                                    {{#status_pending}}bg-yellow-100 text-yellow-800{{/status_pending}}
                                    {{#status_failed}}bg-red-100 text-red-800{{/status_failed}}
                                    {{#status_refunded}}bg-purple-100 text-purple-800{{/status_refunded}}">
                                    {{status_text}}
                                </span>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
                                <a href="{{details_url}}" class="text-indigo-600 hover:text-indigo-900 mr-3">{{strings.details}}</a>
                                {{#can_refund}}
                                <a href="{{refund_url}}" class="text-red-600 hover:text-red-900">{{strings.refund}}</a>
                                {{/can_refund}}
                            </td>
                        </tr>
                        {{/transactions}}
                    </tbody>
                </table>
            </div>
            {{/has_transactions}}
            
            {{^has_transactions}}
            <div class="px-6 py-12 text-center">
                <svg class="mx-auto h-14 w-14 text-gray-300" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 13V6a2 2 0 00-2-2H6a2 2 0 00-2 2v7m16 0v5a2 2 0 01-2 2H6a2 2 0 01-2-2v-5m16 0h-2.586a1 1 0 00-.707.293l-2.414 2.414a1 1 0 01-.707.293h-3.172a1 1 0 01-.707-.293l-2.414-2.414A1 1 0 006.586 13H4" />
                </svg>
                <h3 class="mt-4 text-sm font-medium text-gray-900">{{strings.notransactions}}</h3>
                <p class="mt-2 text-sm text-gray-500 max-w-md mx-auto">{{strings.notransactionsdesc}}</p>
                <div class="mt-6">
                    <button class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-lg text-indigo-700 bg-indigo-100 hover:bg-indigo-200 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"></path>
                        </svg>
                        {{strings.refresh}}
                    </button>
                </div>
            </div>
            {{/has_transactions}}
            
            <!-- Pagination -->
            {{#has_pagination}}
            <div class="px-6 py-4 border-t border-gray-200 sm:px-6">
                <nav class="flex items-center justify-between">
                    <div class="hidden sm:block">
                        <p class="text-sm text-gray-700">
                            {{strings.showing}} <span class="font-medium">{{pagination.showing_start}}</span> {{strings.to}} <span class="font-medium">{{pagination.showing_end}}</span> {{strings.of}} <span class="font-medium">{{pagination.total}}</span> {{strings.results}}
                        </p>
                    </div>
                    <div class="flex-1 flex justify-between sm:justify-end">
                        {{#pagination.has_prev}}
                        <a href="{{pagination.prev_url}}" class="relative inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50">
                            {{strings.previous}}
                        </a>
                        {{/pagination.has_prev}}
                        {{#pagination.has_next}}
                        <a href="{{pagination.next_url}}" class="ml-3 relative inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50">
                            {{strings.next}}
                        </a>
                        {{/pagination.has_next}}
                    </div>
                </nav>
            </div>
            {{/has_pagination}}
        </div>
    </div>
</div> 