{{!
    @template local_lidio/merchant_dashboard

    Merchant dashboard template.

    Classes required for JS:
    * none

    Context variables required for this template:
    * merchant - Merchant data object
    * strings - Array of language strings
    * transactions_url - URL to transactions page
    * is_admin - Boolean indicating if the user is an admin
    * admin_url - URL to merchant management page
}}

<div class="bg-gray-50 min-h-screen">
    <!-- Top Header Card -->
    <div class="bg-[#005eff] text-white p-6 rounded-lg shadow-lg m-4 md:m-6">
        <div class="flex flex-col md:flex-row md:items-center md:justify-between">
            <div>
                <h2 class="text-2xl font-bold flex items-center">
                    <span>{{strings.welcome}}, {{merchant.company_name}}</span>
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 ml-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                    </svg>
                </h2>
                <div class="mt-2">
                    <div class="text-sm opacity-80">{{strings.earnings}}</div>
                    <div class="text-3xl font-bold">₺{{stats.total_earnings}}</div>
                    <div class="text-xs opacity-70 mt-1 flex items-center">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6" />
                        </svg>
                        <span>+3.2% from last month</span>
                    </div>
                </div>
            </div>
            <div class="mt-4 md:mt-0">
                <a href="#" class="inline-flex items-center px-4 py-2 bg-white text-[#005eff] rounded-full font-medium hover:bg-blue-50 transition-colors">
                    {{strings.withdraw}}
                </a>
            </div>
        </div>
        <div class="mt-4 text-sm">
            <div class="flex items-center">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.828 10.172a4 4 0 00-5.656 0l-4 4a4 4 0 105.656 5.656l1.102-1.101m-.758-4.899a4 4 0 005.656 0l4-4a4 4 0 00-5.656-5.656l-1.1 1.1" />
                </svg>
                <span>https://lunar.id/{{merchant.username}}</span>
            </div>
        </div>
    </div>

    <!-- Stats Cards -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4 px-4 md:px-6 mb-6">
        <!-- Total Revenue -->
        <div class="bg-white rounded-lg p-5 shadow">
            <div class="flex items-center justify-between mb-4">
                <div class="w-10 h-10 rounded-full bg-[#e3f5c5] flex items-center justify-center">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-green-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                    </svg>
                </div>
                <span class="text-green-500 text-sm font-medium">↑ 3%</span>
            </div>
            <h3 class="text-gray-500 text-sm mb-1">{{strings.totalrevenue}}</h3>
            <div class="text-2xl font-bold text-gray-800">₺{{stats.total_earnings}}</div>
        </div>

        <!-- Total Products -->
        <div class="bg-white rounded-lg p-5 shadow">
            <div class="flex items-center justify-between mb-4">
                <div class="w-10 h-10 rounded-full bg-[#e3f5c5] flex items-center justify-center">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-green-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z" />
                    </svg>
                </div>
                <span class="text-green-500 text-sm font-medium">↑ 11</span>
            </div>
            <h3 class="text-gray-500 text-sm mb-1">{{strings.totalproducts}}</h3>
            <div class="text-2xl font-bold text-gray-800">16</div>
        </div>

        <!-- Total Sales -->
        <div class="bg-white rounded-lg p-5 shadow">
            <div class="flex items-center justify-between mb-4">
                <div class="w-10 h-10 rounded-full bg-[#e3f5c5] flex items-center justify-center">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-green-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2" />
                    </svg>
                </div>
                <span class="text-red-500 text-sm font-medium">↓ 4%</span>
            </div>
            <h3 class="text-gray-500 text-sm mb-1">{{strings.totalsales}}</h3>
            <div class="text-2xl font-bold text-gray-800">{{stats.total_transactions}}</div>
        </div>

        <!-- Total Customers -->
        <div class="bg-white rounded-lg p-5 shadow">
            <div class="flex items-center justify-between mb-4">
                <div class="w-10 h-10 rounded-full bg-[#e3f5c5] flex items-center justify-center">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-green-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
                    </svg>
                </div>
                <span class="text-green-500 text-sm font-medium">↑ 1%</span>
            </div>
            <h3 class="text-gray-500 text-sm mb-1">{{strings.totalcustomers}}</h3>
            <div class="text-2xl font-bold text-gray-800">3,495</div>
        </div>
    </div>

    <!-- Main Content Area -->
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-4 px-4 md:px-6 mb-6">
        <!-- Sales Summary -->
        <div class="bg-white rounded-lg p-5 shadow lg:col-span-1">
            <div class="flex justify-between items-center mb-4">
                <h3 class="font-semibold text-gray-800">{{strings.salessummary}}</h3>
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                </svg>
            </div>
            <p class="text-xs text-gray-500 mb-4">{{strings.customeracquisition}}<br><span class="font-semibold text-gray-700">2.67%</span><br>{{strings.eachmonth}}</p>
            
            <!-- Chart Placeholder -->
            <div class="h-40 bg-gradient-to-r from-blue-50 to-blue-100 rounded-lg relative overflow-hidden mb-4">
                <div class="absolute bottom-0 left-0 right-0 h-24 bg-blue-500 opacity-20 rounded-lg"></div>
                <div class="absolute bottom-0 left-0 right-0 h-20 border-t-2 border-blue-500"></div>
            </div>
            
            <div class="flex flex-col">
                <div class="text-xs text-gray-500">{{strings.newcustomerthisyear}}</div>
                <div class="flex items-center justify-between">
                    <div class="text-2xl font-bold">+847</div>
                    <div class="text-green-500 text-sm font-medium">↑ 32%</div>
                </div>
                <div class="mt-2 grid grid-cols-5 gap-2 text-center text-xs text-gray-400">
                    <div>Jan</div>
                    <div>Feb</div>
                    <div>Mar</div>
                    <div>Apr</div>
                    <div>May</div>
                </div>
            </div>
        </div>

        <!-- Sales Funnel -->
        <div class="bg-white rounded-lg p-5 shadow lg:col-span-1">
            <div class="flex justify-between items-center mb-4">
                <h3 class="font-semibold text-gray-800">{{strings.salesfunnel}}</h3>
                <div class="relative">
                    <select class="text-sm border-none bg-gray-50 rounded py-1 px-3 appearance-none">
                        <option>All Time</option>
                        <option>This Month</option>
                        <option>Last Month</option>
                    </select>
                    <div class="pointer-events-none absolute inset-y-0 right-0 flex items-center px-2 text-gray-700">
                        <svg class="fill-current h-4 w-4" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20">
                            <path d="M9.293 12.95l.707.707L15.657 8l-1.414-1.414L10 10.828 5.757 6.586 4.343 8z"/>
                        </svg>
                    </div>
                </div>
            </div>
            
            <!-- Funnel Chart -->
            <div class="space-y-4 mt-6">
                <div>
                    <div class="flex justify-between items-center mb-1">
                        <span class="text-sm text-gray-600">{{strings.visit}}</span>
                        <span class="text-sm text-gray-600">100%</span>
                    </div>
                    <div class="h-8 bg-gray-100 rounded-md relative">
                        <div class="absolute inset-y-0 left-0 bg-gradient-to-r from-gray-200 to-gray-300 w-full rounded-md"></div>
                        <div class="absolute inset-y-0 left-4 text-sm flex items-center text-gray-700">15,903</div>
                    </div>
                </div>
                
                <div>
                    <div class="flex justify-between items-center mb-1">
                        <span class="text-sm text-gray-600">{{strings.click}}</span>
                        <span class="text-sm text-gray-600">62.8%</span>
                    </div>
                    <div class="h-8 bg-gray-100 rounded-md relative">
                        <div class="absolute inset-y-0 left-0 bg-gradient-to-r from-gray-200 to-gray-300 w-4/5 rounded-md"></div>
                        <div class="absolute inset-y-0 left-4 text-sm flex items-center text-gray-700">9,992</div>
                    </div>
                </div>
                
                <div>
                    <div class="flex justify-between items-center mb-1">
                        <span class="text-sm text-gray-600">{{strings.purchased}}</span>
                        <span class="text-sm text-gray-600">28.3%</span>
                    </div>
                    <div class="h-8 bg-gray-100 rounded-md relative">
                        <div class="absolute inset-y-0 left-0 bg-[#4f7df9] w-1/3 rounded-md"></div>
                        <div class="absolute inset-y-0 left-4 text-sm flex items-center text-white">4,502</div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Top Product -->
        <div class="bg-white rounded-lg p-5 shadow lg:col-span-1">
            <div class="flex justify-between items-center mb-4">
                <h3 class="font-semibold text-gray-800">{{strings.topproduct}}</h3>
                <span class="text-sm text-blue-500">{{strings.showall}}</span>
            </div>
            <p class="text-sm text-gray-500 mb-4">{{strings.totalsold}}: <span class="font-medium">415</span></p>
            
            <!-- Product Card -->
            <div class="bg-gray-900 rounded-lg p-4 text-white mb-4 relative overflow-hidden">
                <div class="absolute top-2 right-2 flex space-x-1">
                    <div class="w-6 h-6 rounded-full bg-blue-500 flex items-center justify-center">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                        </svg>
                    </div>
                    <div class="w-6 h-6 rounded-full bg-green-500 flex items-center justify-center">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                        </svg>
                    </div>
                </div>
                <div class="flex items-center space-x-2 mb-2">
                    <span class="bg-gray-700 text-white text-xs px-2 py-1 rounded">earn</span>
                </div>
                <h4 class="text-lg font-bold uppercase mb-1">FULL STACK<br>WEB DEVELOPMENT</h4>
                <div class="mt-8 flex items-center justify-between">
                    <div>
                        <div class="text-sm">Full Stack Web Development</div>
                        <div class="text-xs text-gray-400">Online Class</div>
                    </div>
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                    </svg>
                </div>
            </div>
        </div>
    </div>

    <!-- Bottom Row -->
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-4 px-4 md:px-6 mb-6">
        <!-- Views & Click -->
        <div class="bg-white rounded-lg p-5 shadow">
            <div class="flex justify-between items-center mb-4">
                <h3 class="font-semibold text-gray-800">{{strings.viewsandclick}}</h3>
                <div class="flex items-center space-x-2">
                    <div class="flex items-center">
                        <div class="w-3 h-3 rounded-full bg-gray-200 mr-1"></div>
                        <span class="text-xs text-gray-500">Views</span>
                    </div>
                    <div class="flex items-center">
                        <div class="w-3 h-3 rounded-full bg-blue-400 mr-1"></div>
                        <span class="text-xs text-gray-500">Click</span>
                    </div>
                    <select class="text-xs border-none bg-gray-50 rounded py-1 px-2 appearance-none ml-4">
                        <option>Last Year</option>
                        <option>This Year</option>
                    </select>
                </div>
            </div>
            
            <div class="flex items-center mb-2">
                <div class="text-sm text-gray-500 mr-4">{{strings.averageviews}}: <span class="font-medium text-gray-700">1,275</span></div>
                <div class="text-sm text-gray-500">{{strings.averageclick}}: <span class="font-medium text-gray-700">902</span></div>
            </div>
            
            <!-- Chart Placeholder -->
            <div class="h-48 bg-gray-50 rounded-lg relative overflow-hidden">
                <div class="absolute bottom-0 left-0 right-0 flex items-end justify-between h-full px-4">
                    <!-- Bar Chart Simulation -->
                    <div class="w-4 bg-gray-200 h-1/5"></div>
                    <div class="w-4 bg-gray-200 h-1/6"></div>
                    <div class="w-4 bg-gray-200 h-1/4"></div>
                    <div class="w-4 bg-gray-200 h-1/5"></div>
                    <div class="w-4 bg-gray-200 h-1/3"></div>
                    <div class="w-4 bg-gray-200 h-1/4"></div>
                    <div class="w-4 bg-gray-200 h-1/5"></div>
                    <div class="w-4 bg-gray-200 h-1/6"></div>
                    <div class="w-4 bg-gray-200 h-1/4"></div>
                    <div class="w-4 bg-gray-200 h-1/3"></div>
                    <div class="w-4 bg-blue-500 h-4/5"></div>
                    <div class="w-4 bg-gray-200 h-1/4"></div>
                </div>
                
                <!-- Chart Tooltip -->
                <div class="absolute top-1/4 right-1/3 bg-gray-800 text-white p-2 rounded shadow-lg text-xs">
                    <div class="font-medium">December 2024</div>
                    <div class="flex justify-between gap-4 mt-1">
                        <div>Views</div>
                        <div>2,508</div>
                    </div>
                    <div class="flex justify-between gap-4">
                        <div>Click</div>
                        <div>1,730</div>
                    </div>
                </div>
            </div>
            
            <!-- X-axis Labels -->
            <div class="grid grid-cols-12 gap-2 mt-2 text-center text-xs text-gray-400">
                <div>Jun</div>
                <div>Jul</div>
                <div>Aug</div>
                <div>Sep</div>
                <div>Oct</div>
                <div>Nov</div>
                <div>Dec</div>
                <div>Jan</div>
                <div>Feb</div>
                <div>Mar</div>
                <div>Apr</div>
                <div>May</div>
            </div>
        </div>

        <!-- Age Range -->
        <div class="bg-white rounded-lg p-5 shadow">
            <div class="flex justify-between items-center mb-4">
                <h3 class="font-semibold text-gray-800">{{strings.agerange}}</h3>
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                </svg>
            </div>
            
            <p class="text-sm text-gray-600 mb-6">{{strings.youngadults}} <span class="font-medium">52%</span> {{strings.ofcustomers}} 20-29</p>
            
            <!-- Donut Chart Placeholder -->
            <div class="relative h-48 flex items-center justify-center">
                <div class="w-32 h-32 rounded-full border-8 border-gray-200 relative">
                    <div class="absolute inset-0 border-8 border-blue-500 rounded-full" style="clip-path: polygon(50% 50%, 50% 0, 100% 0, 100% 100%, 50% 100%)"></div>
                    <div class="absolute inset-0 flex items-center justify-center">
                        <div class="bg-gray-800 text-white text-sm font-medium px-2 py-1 rounded">52%</div>
                    </div>
                </div>
                
                <!-- Legend -->
                <div class="absolute bottom-0 left-0 right-0 flex justify-center gap-4 text-xs">
                    <div class="flex items-center">
                        <div class="w-3 h-3 rounded-full bg-gray-300 mr-1"></div>
                        <span>13-19</span>
                    </div>
                    <div class="flex items-center">
                        <div class="w-3 h-3 rounded-full bg-blue-500 mr-1"></div>
                        <span>20-29</span>
                    </div>
                    <div class="flex items-center">
                        <div class="w-3 h-3 rounded-full bg-gray-300 mr-1"></div>
                        <span>30-39</span>
                    </div>
                    <div class="flex items-center">
                        <div class="w-3 h-3 rounded-full bg-gray-300 mr-1"></div>
                        <span>40-49</span>
                    </div>
                    <div class="flex items-center">
                        <div class="w-3 h-3 rounded-full bg-yellow-300 mr-1"></div>
                        <span>50-59</span>
                    </div>
                    <div class="flex items-center">
                        <div class="w-3 h-3 rounded-full bg-green-500 mr-1"></div>
                        <span>>60</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> 