{{!
    @template local_lidio/kyc_verification

    KYC verification form template.

    Classes required for JS:
    * none

    Context variables required for this template:
    * sesskey - The session key
    * actionurl - Form action URL
    * merchant - Merchant data object
    * document_types - Array of document types
    * documents - Array of uploaded documents
    * errors - Array of validation errors
    * has_errors - Boolean indicating if there are validation errors
    * strings - Array of language strings
}}

<div class="max-w-4xl mx-auto">
    <div class="bg-blue-50 border-l-4 border-blue-500 p-5 mb-6 rounded shadow-sm">
        <h4 class="text-xl font-semibold text-blue-800 mb-2">{{strings.kycverification}}</h4>
        <p class="text-blue-700">{{strings.kycverificationintro}}</p>
    </div>

    <form id="kyc-verification-form" method="post" action="{{actionurl}}" class="bg-white rounded-lg shadow-lg overflow-hidden mb-6" enctype="multipart/form-data">
        <input type="hidden" name="sesskey" value="{{sesskey}}">
        
        <div class="bg-gray-50 px-6 py-4 border-b border-gray-200">
            <h3 class="text-lg font-semibold text-gray-800">{{strings.kycuploaddocuments}}</h3>
        </div>

        <div class="px-6 py-5 space-y-6">
            {{#document_types}}
            <div class="document-upload-section">
                <div class="grid grid-cols-1 md:grid-cols-3 gap-4 items-start">
                    <label for="document_{{type}}" class="text-sm font-medium text-gray-700 pt-2">{{name}} *</label>
                    <div class="md:col-span-2 space-y-2">
                        <div class="flex items-center space-x-2">
                            <input type="file" id="document_{{type}}" name="document_{{type}}" 
                                class="file:mr-4 file:py-2 file:px-4 file:rounded-md file:border-0 file:text-sm file:font-semibold file:bg-blue-50 file:text-blue-700 hover:file:bg-blue-100" 
                                accept=".jpg,.jpeg,.png,.pdf">
                            <button type="button" class="inline-flex items-center px-3 py-1.5 border border-transparent text-xs font-medium rounded text-indigo-700 bg-indigo-100 hover:bg-indigo-200 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 upload-button">
                                <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M15 13l-3-3m0 0l-3 3m3-3v12"></path>
                                </svg>
                                {{strings.upload}}
                            </button>
                        </div>
                        {{#errors}}
                        {{#document_{{type}}}}
                        <p class="mt-1 text-sm text-red-600">{{.}}</p>
                        {{/document_{{type}}}}
                        {{/errors}}
                        <p class="text-xs text-gray-500">{{strings.acceptedformats}}: JPG, PNG, PDF. {{strings.maxfilesize}}: 5MB</p>
                    </div>
                </div>
                
                <!-- Show existing document if available -->
                {{#documents}}
                {{#type_{{type}}}}
                <div class="mt-3 ml-8 md:ml-0 md:pl-1/3 md:pl-0 md:ml-1/3">
                    <div class="flex items-center p-3 bg-green-50 rounded-md border border-green-200">
                        <div class="flex-shrink-0 text-green-600">
                            <svg class="h-5 w-5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                            </svg>
                        </div>
                        <div class="ml-3">
                            <p class="text-sm text-green-800">{{filename}} <span class="text-xs text-green-600">({{strings.uploaded}} {{timeformatted}})</span></p>
                        </div>
                        <div class="ml-auto">
                            <a href="{{deleteurl}}" class="flex items-center text-xs text-red-600 hover:text-red-800">
                                <svg class="h-4 w-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                                </svg>
                                {{strings.delete}}
                            </a>
                        </div>
                    </div>
                </div>
                {{/type_{{type}}}}
                {{/documents}}
            </div>
            {{/document_types}}
        </div>

        <!-- KYC Status -->
        <div class="px-6 py-5 bg-gray-50 border-t border-gray-200">
            <div class="flex items-center space-x-4">
                <span class="text-sm font-medium text-gray-700">{{strings.kycstatus}}:</span>
                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium
                    {{#merchant.kyc_status_approved}}bg-green-100 text-green-800{{/merchant.kyc_status_approved}}
                    {{#merchant.kyc_status_pending}}bg-yellow-100 text-yellow-800{{/merchant.kyc_status_pending}}
                    {{#merchant.kyc_status_rejected}}bg-red-100 text-red-800{{/merchant.kyc_status_rejected}}">
                    {{#merchant.kyc_status_approved}}{{strings.approved}}{{/merchant.kyc_status_approved}}
                    {{#merchant.kyc_status_pending}}{{strings.pending}}{{/merchant.kyc_status_pending}}
                    {{#merchant.kyc_status_rejected}}{{strings.rejected}}{{/merchant.kyc_status_rejected}}
                </span>
            </div>
            {{#merchant.kyc_status_rejected}}
            <div class="mt-4 bg-red-50 border-l-4 border-red-500 p-4">
                <div class="flex">
                    <div class="flex-shrink-0">
                        <svg class="h-5 w-5 text-red-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
                        </svg>
                    </div>
                    <div class="ml-3">
                        <p class="text-sm text-red-700">{{merchant.kyc_rejection_reason}}</p>
                    </div>
                </div>
            </div>
            {{/merchant.kyc_status_rejected}}
        </div>

        <!-- Buttons -->
        <div class="px-6 py-4 bg-gray-100 border-t border-gray-200 flex justify-end">
            <button type="submit" name="submitbutton" value="1" class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-primary-600 hover:bg-primary-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary-500">
                {{strings.submit}}
            </button>
        </div>
    </form>
</div> 