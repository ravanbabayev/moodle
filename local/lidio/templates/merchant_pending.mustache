{{!
    @template local_lidio/merchant_pending

    Merchant pending approval template.

    Classes required for JS:
    * none

    Context variables required for this template:
    * merchant - Merchant data object
    * strings - Array of language strings
}}

<div class="max-w-4xl mx-auto">
    <div class="bg-blue-50 border-l-4 border-blue-500 p-5 mb-6 rounded-lg shadow-sm">
        <h4 class="text-xl font-semibold text-blue-800 mb-2">{{strings.merchantapplicationpending}}</h4>
        <p class="text-blue-700">{{strings.merchantapplicationpendingmessage}}</p>
    </div>

    <div class="bg-white rounded-lg shadow-lg overflow-hidden mb-6">
        <div class="bg-gray-50 px-6 py-4 border-b border-gray-200">
            <h3 class="text-lg font-semibold text-gray-800">{{strings.merchantinfo}}</h3>
        </div>
        <div class="px-6 py-5">
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div class="space-y-4">
                    <div class="flex flex-col">
                        <div class="flex justify-between py-3 border-b border-gray-200">
                            <span class="font-medium text-gray-600">{{strings.companyname}}:</span>
                            <span class="text-gray-900">{{merchant.company_name}}</span>
                        </div>
                        <div class="flex justify-between py-3 border-b border-gray-200">
                            <span class="font-medium text-gray-600">{{strings.email}}:</span>
                            <span class="text-gray-900">{{merchant.email}}</span>
                        </div>
                        <div class="flex justify-between py-3 border-b border-gray-200">
                            <span class="font-medium text-gray-600">{{strings.phonenumber}}:</span>
                            <span class="text-gray-900">{{merchant.phone}}</span>
                        </div>
                        <div class="flex justify-between py-3 border-b border-gray-200">
                            <span class="font-medium text-gray-600">{{strings.status}}:</span>
                            <span class="inline-flex items-center px-3 py-1 text-xs font-medium rounded-full bg-yellow-100 text-yellow-800">
                                {{merchant.status}}
                            </span>
                        </div>
                    </div>
                </div>
                <div class="space-y-4">
                    <div class="flex flex-col">
                        <div class="flex justify-between py-3 border-b border-gray-200">
                            <span class="font-medium text-gray-600">{{strings.businessarea}}:</span>
                            <span class="text-gray-900">{{merchant.business_area}}</span>
                        </div>
                        <div class="flex justify-between py-3 border-b border-gray-200">
                            <span class="font-medium text-gray-600">{{strings.monthlysalesvolume}}:</span>
                            <span class="text-gray-900">
                                {{#monthly_volume_options}}
                                    {{#selected}}{{text}}{{/selected}}
                                {{/monthly_volume_options}}
                            </span>
                        </div>
                        <div class="flex justify-between py-3 border-b border-gray-200">
                            <span class="font-medium text-gray-600">{{strings.kycstatus}}:</span>
                            <span class="inline-flex items-center px-3 py-1 text-xs font-medium rounded-full bg-yellow-100 text-yellow-800">
                                {{merchant.kyc_status}}
                            </span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="px-6 py-5 bg-gray-50 border-t border-gray-200">
            <a href="{{actionurl}}?edit=1" class="inline-flex items-center px-6 py-3 border border-transparent rounded-lg shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.232 5.232l3.536 3.536m-2.036-5.036a2.5 2.5 0 113.536 3.536L6.5 21.036H3v-3.572L16.732 3.732z"></path>
                </svg>
                {{strings.updateapplication}}
            </a>
        </div>
    </div>
</div>

<style>
.merchant-pending-container {
    max-width: 900px;
    margin: 0 auto;
}
.badge-warning {
    color: #212529;
    background-color: #ffc107;
}
</style> 