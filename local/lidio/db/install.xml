<?xml version="1.0" encoding="UTF-8" ?>
<XMLDB PATH="local/lidio/db" VERSION="20231109" COMMENT="XMLDB file for Moodle local/lidio plugin"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="../../../lib/xmldb/xmldb.xsd"
>
  <TABLES>
    <TABLE NAME="local_lidio_merchants" COMMENT="Stores merchant information">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
        <FIELD NAME="userid" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="false" COMMENT="Foreign key references user.id"/>
        <FIELD NAME="status" TYPE="char" LENGTH="20" NOTNULL="true" DEFAULT="pending" SEQUENCE="false" COMMENT="Merchant account status (pending, approved, rejected)"/>
        <FIELD NAME="fullname" TYPE="char" LENGTH="255" NOTNULL="true" SEQUENCE="false" COMMENT="Full name of the merchant"/>
        <FIELD NAME="address" TYPE="text" NOTNULL="false" SEQUENCE="false" COMMENT="Address of the merchant"/>
        <FIELD NAME="phone" TYPE="char" LENGTH="20" NOTNULL="false" SEQUENCE="false" COMMENT="Phone number of the merchant"/>
        <FIELD NAME="idnumber" TYPE="char" LENGTH="20" NOTNULL="false" SEQUENCE="false" COMMENT="ID/Passport number of the merchant"/>
        <FIELD NAME="kyc_status" TYPE="char" LENGTH="20" NOTNULL="true" DEFAULT="pending" SEQUENCE="false" COMMENT="KYC status (pending, approved, rejected)"/>
        <FIELD NAME="kyc_details" TYPE="text" NOTNULL="false" SEQUENCE="false" COMMENT="Additional KYC information"/>
        <FIELD NAME="timecreated" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0" SEQUENCE="false"/>
        <FIELD NAME="timemodified" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0" SEQUENCE="false"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
        <KEY NAME="userid" TYPE="foreign" FIELDS="userid" REFTABLE="user" REFFIELDS="id"/>
      </KEYS>
      <INDEXES>
        <INDEX NAME="userid-status" UNIQUE="false" FIELDS="userid, status"/>
      </INDEXES>
    </TABLE>
    <TABLE NAME="local_lidio_documents" COMMENT="Stores merchant KYC documents">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
        <FIELD NAME="merchantid" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="false" COMMENT="Foreign key references local_lidio_merchants.id"/>
        <FIELD NAME="type" TYPE="char" LENGTH="50" NOTNULL="true" SEQUENCE="false" COMMENT="Type of document"/>
        <FIELD NAME="filepath" TYPE="text" NOTNULL="true" SEQUENCE="false" COMMENT="Path to the stored document"/>
        <FIELD NAME="filename" TYPE="char" LENGTH="255" NOTNULL="true" SEQUENCE="false" COMMENT="Original filename"/>
        <FIELD NAME="status" TYPE="char" LENGTH="20" NOTNULL="true" DEFAULT="pending" SEQUENCE="false" COMMENT="Document verification status"/>
        <FIELD NAME="feedback" TYPE="text" NOTNULL="false" SEQUENCE="false" COMMENT="Admin feedback on document"/>
        <FIELD NAME="timecreated" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0" SEQUENCE="false"/>
        <FIELD NAME="timemodified" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0" SEQUENCE="false"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
        <KEY NAME="merchantid" TYPE="foreign" FIELDS="merchantid" REFTABLE="local_lidio_merchants" REFFIELDS="id"/>
      </KEYS>
      <INDEXES>
        <INDEX NAME="merchantid-type" UNIQUE="false" FIELDS="merchantid, type"/>
      </INDEXES>
    </TABLE>
  </TABLES>
</XMLDB> 